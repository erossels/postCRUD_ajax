<p id="notice"><%= notice %></p>
<div class='my-5 py-3 navbar navbar-light bg-light'>
  <h1>Posts</h1>
</div>

<div class ='container col-8'>
  <%= render 'search' %>
</div>

<div id="post_edit" class='container card col-8'>
  <h3>Crea un nuevo post </h2>
  <%= render "form"%>
</div>

<div id="post_show" class='container card col-8'></div>

<div class='container col-8'>
  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="post">
      <%= render @posts %>
    </tbody>
    
  </table>
</div>